<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zmachmobile.com.barclayseye.fragments.AnswerFragment">
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/asking_question"/>
    <LinearLayout
        android:layout_below="@id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/optA"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight=".50"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                >
                <TextView
                    android:id="@+id/txtOptA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="70dp"
                    android:rotation="0"
                    android:textColor="#fff"
                    android:text="C"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/optB"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight=".50"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                >
                <TextView
                    android:id="@+id/txtOptB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="70dp"
                    android:rotation="90"
                    android:textColor="#fff"
                    android:text="C"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/optC"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight=".50"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                >
                <TextView
                    android:id="@+id/txtOptC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="70dp"
                    android:rotation="270"
                    android:textColor="#fff"
                    android:text="C"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/optD"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight=".50"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                >
                <TextView
                    android:id="@+id/txtOptD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="70dp"
                    android:rotation="180"
                    android:textColor="#fff"
                    android:text="C"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not sure"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn_yellow"/>
</RelativeLayout>
