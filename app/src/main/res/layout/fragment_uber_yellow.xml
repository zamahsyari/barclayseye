<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zmachmobile.com.barclayseye.fragments.UberFragment">
    <LinearLayout
        android:layout_below="@id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_app_yellow"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="22dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="112dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryYellow"
                android:text="@string/title_uber"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-80dp"
                android:src="@drawable/uber_logotype_digital"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_list_upper"
            android:padding="12dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:src="@drawable/icon_departing"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryYellow"
                android:text="Your Location"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b4b4b4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_list_lower"
            android:padding="12dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:src="@drawable/icon_destination"/>
            <TextView
                android:id="@+id/txtDestination"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryYellow"
                android:text="Your Location"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="39dp"
            android:padding="24dp"
            android:background="@drawable/bg_list_upper">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UberX"
                    android:textSize="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorPrimaryYellow"/>
                <TextView
                    android:id="@+id/txtETA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup in 6 mins"
                    android:textColor="#8f8f8f"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="$6-10"
                android:textStyle="bold"
                android:layout_marginLeft="-100dp"
                android:textColor="@color/colorPrimaryYellow"
                android:textSize="24dp"
                android:gravity="end|center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_blue"
        android:textColor="@color/colorPrimaryDarkYellow"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="18dp"
        android:layout_marginTop="360dp"
        android:text="REQUEST"/>
    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_btn_mic"
        android:src="@drawable/microphone_black_shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:padding="26dp" />
    <ImageView
        android:layout_marginTop="173dp"
        android:layout_marginLeft="36dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software"
        android:src="@drawable/line_dashed"
        />
</RelativeLayout>
